<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <include
        android:id="@+id/buttons"
        layout="@layout/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
 />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons"
        android:gravity="center_horizontal"
        android:text="Choose an option"
        android:textSize="@dimen/tabs_text_size" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="20dp">

        <RadioButton
            android:id="@+id/rbAllPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="All photos"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbInLastWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="In last week"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbThisMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="This month"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbInLastMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="In Last Month"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbInLast3Months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="In Last 3 Months"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbThisYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="This year"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbInLastYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="In last year"
            android:textSize="@dimen/radioOptionsTextSize" />

        <RadioButton
            android:id="@+id/rbLastYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Last year"
            android:textSize="@dimen/radioOptionsTextSize" />

    </RadioGroup>

</RelativeLayout>