<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:layout_width="@dimen/controlbuttonsize"
        android:layout_height="@dimen/controlbuttonsize"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play_shuffled"
        android:id="@+id/btnShowPicturesShuffled"
        />

    <ImageButton
        android:layout_width="@dimen/controlbuttonsize"
        android:layout_height="@dimen/controlbuttonsize"
        android:scaleType="fitCenter"
        android:text="Shuffled"
        android:src="@drawable/ic_play"
        android:id="@+id/btnShowSlideshow"
        />
    <ImageButton
        android:layout_width="@dimen/controlbuttonsize"
        android:layout_height="@dimen/controlbuttonsize"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_view"
        android:id="@+id/btnShowPictures"

        />


</LinearLayout>